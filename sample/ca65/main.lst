000000r 3               ;	void	NSD_MAIN_BGM()
000000r 3               ;-----------------------------------------------------------------------
000000r 3               ;<<Contents>>
000000r 3               ;	BGM main routine
000000r 3               ;<<Input>>
000000r 3               ;	none
000000r 3               ;<<Output>>
000000r 3               ;	none
000000r 3               ;=======================================================================
000000r 3               .macro	NSD_MAIN_BGM
000000r 3               	.local	BGM_Begin
000000r 3               	.local	BGM_SEQ_Exit
000000r 3               	.local	BGM_Exit
000000r 3               
000000r 3               	lda	#nsd_flag::BGM
000000r 3               	bit	__flag
000000r 3               	jne	BGM_Exit		;BGM disable ?
000000r 3               
000000r 3               	;-------------------------------
000000r 3               	;Tempo
000000r 3               	lda	__Tempo_ctr
000000r 3               	add	__Tempo
000000r 3               	sta	__Tempo_ctr
000000r 3               	jcc	BGM_SEQ_Exit
000000r 3               
000000r 3               	;-------------------------------
000000r 3               	;BGM
000000r 3               BGM_Begin:
000000r 3               	.repeat	nsd::BGM_Track, I
000000r 3               		ldx	#I*2 + nsd::TR_BGM1
000000r 3               		jsr	nsd_sequence
000000r 3               	.endrepeat
000000r 3               
000000r 3               	lda	__Tempo_ctr
000000r 3               	sub	#150
000000r 3               	sta	__Tempo_ctr
000000r 3               	cmp	#106
000000r 3               	jcc	BGM_Begin
000000r 3               
000000r 3               BGM_SEQ_Exit:
000000r 3               
000000r 3               	;-------
000000r 3               	;Envelop
000000r 3               	.repeat	nsd::BGM_Track, I
000000r 3               	  ;No envelope: DPCM, NULL
000000r 3               	  .if	(I <> 4) && (!(.defined(NULL) && (I = (nsd::TR_NULL / 2))))
000000r 3               		ldx	#I*2 + nsd::TR_BGM1
000000r 3               		jsr	nsd_envelop
000000r 3               	  .endif
000000r 3               	.endrepeat
000000r 3               
000000r 3               BGM_Exit:
000000r 3               
000000r 3               .endmacro
