000000r 3               ;	void	NSD_MAIN_SE()
000000r 3               ;-----------------------------------------------------------------------
000000r 3               ;<<Contents>>
000000r 3               ;	SE main routine
000000r 3               ;<<Input>>
000000r 3               ;	none
000000r 3               ;<<Output>>
000000r 3               ;	none
000000r 3               ;=======================================================================
000000r 3               .macro	NSD_MAIN_SE
000000r 3               	.local	SE0
000000r 3               	.local	SE1
000000r 3               	.local	SE_Exit
000000r 3               
000000r 3               	lda	#nsd_flag::SE
000000r 3               	bit	__flag
000000r 3               	bne	SE_Exit			;SE disable ?
000000r 3               
000000r 3               	ldx	#nsd::TR_SE1
000000r 3               	lda	__Sequence_ptr + 1,x
000000r 3               .ifdef	DPCMBank
000000r 3               	ora	__Sequence_ptr,x
000000r 3               .endif
000000r 3               	beq	SE0
000000r 3               	jsr	nsd_sequence
000000r 3               	jsr	nsd_envelop
000000r 3               SE0:
000000r 3               	ldx	#nsd::TR_SE2
000000r 3               	lda	__Sequence_ptr + 1,x
000000r 3               .ifdef	DPCMBank
000000r 3               	ora	__Sequence_ptr,x
000000r 3               .endif
000000r 3               	beq	SE1
000000r 3               	jsr	nsd_sequence
000000r 3               	jsr	nsd_envelop
000000r 3               	jmp	SE_Exit
000000r 3               SE1:
000000r 3               	ora	__Sequence_ptr + nsd::TR_SE1 + 1
000000r 3               .ifdef	DPCMBank
000000r 3               	ora	__Sequence_ptr + nsd::TR_SE1
000000r 3               .endif
000000r 3               	bne	SE_Exit
000000r 3               
000000r 3               	;SE Disable
000000r 3               	lda	#nsd_flag::SE
000000r 3               	ora	__flag
000000r 3               	sta	__flag
000000r 3               SE_Exit:
000000r 3               
000000r 3               
000000r 3               .endmacro
