00002Dr 1               .proc	nsd_keyoff
00002Dr 1               
00002Dr 1               	; to do	tai check
00002Dr 1  BD rr rr     	lda	__tai,x
000030r 1  29 01        	and	#$01
000032r 1  D0 09        	bne	@E
000034r 1               
000034r 1  BD rr rr     	lda	__chflag,x
000037r 1  29 03        	and	#nsd_chflag::KeyOff
000039r 1  C9 03        	cmp	#nsd_chflag::KeyOff
00003Br 1  F0 01        	beq	@L			;Key Onの時のみ、処理。
00003Dr 1               
00003Dr 1  60           @E:	rts
00003Er 1               @L:
00003Er 1               	;Software key Off
00003Er 1  BD rr rr     	lda	__chflag,x
000041r 1  29 FC        	and	#~nsd_chflag::KeyOff
000043r 1  1D rr rr     	ora	__gatemode,x
000046r 1  9D rr rr     	sta	__chflag,x
000049r 1               
000049r 1               	;Hardware key off
000049r 1  20 rr rr     	jsr	_nsd_snd_keyoff
