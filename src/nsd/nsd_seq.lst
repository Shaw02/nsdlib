000000r 1               ;		nsd_keyon
000000r 1               ;-----------------------------------------------------------------------
000000r 1               ;<<Contents>>
000000r 1               ;	Key On
000000r 1               ;<<Input>>
000000r 1               ;	nothing
000000r 1               ;<<Output>>
000000r 1               ;	nothing
000000r 1               ;=======================================================================
000000r 1               .proc	nsd_keyon
000000r 1               
000000r 1               	;tai check
000000r 1  BD rr rr     	lda	__tai,x
000003r 1  29 02        	and	#$02
000005r 1  D0 25        	bne	exit
000007r 1               
000007r 1               	;Software envelop Key on
000007r 1  BD rr rr     	lda	__chflag,x
00000Ar 1  29 FC        	and	#~nsd_chflag::KeyOff
00000Cr 1  09 03        	ora	#nsd_chflag::KeyOff
00000Er 1  9D rr rr     	sta	__chflag,x
000011r 1               
000011r 1               	;Hardware key on
000011r 1  20 rr rr     	jsr	_nsd_snd_keyon
000014r 1               
000014r 1  95 rr        	sta	__Envelop_F,x
000016r 1  9D rr rr     	sta	__env_freq_ptr,x
000019r 1  9D rr rr     	sta	__env_note_ptr,x
00001Cr 1               
00001Cr 1  E0 04        	cpx	#nsd::TR_BGM3
00001Er 1  F0 0C        	beq	exit
000020r 1  E0 08        	cpx	#nsd::TR_BGM5
000022r 1  F0 08        	beq	exit
000024r 1  95 rr        	sta	__Envelop_V,x
000026r 1  9D rr rr     	sta	__env_voi_ptr,x
000029r 1  9D rr rr     	sta	__env_vol_ptr,x
00002Cr 1               
00002Cr 1  60           exit:	rts
00002Dr 1               .endproc
