000000r 2               .macro  ldax    arg
000000r 2               	.if (.match (.left (1, {arg}), #))
000000r 2               		; immediate mode
000000r 2               		lda     #<(.right (.tcount ({arg})-1, {arg}))
000000r 2               		ldx     #>(.right (.tcount ({arg})-1, {arg}))
000000r 2               	.else
000000r 2               		; assume absolute or zero page
000000r 2               		lda     arg
000000r 2               		ldx     1+(arg)
000000r 2               	.endif
000000r 2               .endmacro
